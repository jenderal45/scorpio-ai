{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "BACKEND_URL": "@BACKEND_URL"
  },
  "buildCommand": "echo 'Static HTML frontend - no build needed'"
}
